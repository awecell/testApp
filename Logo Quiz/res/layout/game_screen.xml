<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GameScreen" >

   

    <RelativeLayout
        android:id="@+id/titleBarOnGameScreen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#CFCECE"
        android:padding="3dp" >

        <TextView
            android:id="@+id/lvelNameView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="@string/levels"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/noOfHintView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:text="@string/hint"
            android:textAppearance="?android:attr/textAppearanceMedium" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/imageViewOnGameScreen"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@+id/titleBarOnGameScreen"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:background="#CFCECE"
        android:contentDescription="@string/app_name" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/titleBarOnGameScreen"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="40dp"
        android:orientation="vertical" >

        <Button
            android:id="@+id/hint1"
            android:layout_width="40dp"
            android:layout_height="40dp" 
            android:background="@drawable/faded_jumble"/>

        <Button
            android:id="@+id/hint2"
            android:layout_width="40dp"
            android:layout_height="40dp" 
            android:background="@drawable/faded_hint1"/>

        <Button
            android:id="@+id/hint3"
            android:layout_width="40dp"
            android:layout_height="40dp" 
            android:background="@drawable/faded_hint2"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/titleBarOnGameScreen"
        android:layout_marginRight="5dp"
        android:layout_marginTop="40dp"
        android:orientation="vertical" >

        <Button
            android:id="@+id/hint4"
            android:layout_width="40dp"
            android:layout_height="40dp" />

        <Button
            android:id="@+id/hint5"
            android:layout_width="40dp"
            android:layout_height="40dp" />

        <Button
            android:id="@+id/hint6"
            android:layout_width="40dp"
            android:layout_height="40dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/userInputLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageViewOnGameScreen"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:orientation="horizontal" >

        <EditText
            android:id="@+id/userInputEditText"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:inputType="text"
            android:maxLines="1"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <Button
            android:id="@+id/checkAnswerButton"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:text="@string/check"
            android:textAppearance="?android:attr/textAppearanceMedium" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/userInputLayout"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/keyPadFirstRow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" />

        <LinearLayout
            android:id="@+id/keyPadSecondRow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" />
    </LinearLayout>
    
     <RelativeLayout
        android:id="@+id/hintLayout"
        android:layout_width="300dp"
        android:layout_height="400dp"
        android:background="#ffff00"
        android:visibility="invisible"
        android:layout_centerHorizontal="true" >

        <RelativeLayout
            android:id="@+id/adOnHintLayout"
            android:layout_width="match_parent"
            android:layout_height="300dp" 
            android:background="#80000000"/>

        <TextView
            android:id="@+id/hintTxtView"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingLeft="10dp"
            android:layout_below="@+id/adOnHintLayout" />

        <Button
            android:id="@+id/okHintBtn"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:text="@string/ok" />
    </RelativeLayout>
    
     <RelativeLayout
        android:id="@+id/fakeHintLayout"
        android:layout_width="300dp"
        android:layout_height="400dp"
        android:background="#ffff00"
        android:visibility="invisible"
        android:layout_centerHorizontal="true" >

        <RelativeLayout
            android:id="@+id/fakeAdOnHintLayout"
            android:layout_width="match_parent"
            android:layout_height="300dp"
             android:background="#80000000" />

        <TextView
            android:id="@+id/fakehintTxtView"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingLeft="10dp"
            android:layout_below="@+id/fakeAdOnHintLayout" />

        <Button
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true" 
            android:layout_alignParentBottom="true"
            android:text="@string/ok"/>

    </RelativeLayout>

</RelativeLayout>